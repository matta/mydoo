{
  "name": "@mydoo/tasklens-ui",
  "type": "module",
  "private": true,
  "devDependencies": {
    "@mydoo/tasklens": "workspace:*",
    "@playwright/test": "catalog:",
    "@types/js-yaml": "catalog:",
    "@types/node": "catalog:",
    "js-yaml": "catalog:",
    "playwright-bdd": "catalog:"
  },
  "scripts": {
    "check-format": "prettier --check .",
    "fix-format": "prettier --write .",
    "generate": "rm -rf tests/e2e/.features-gen && bddgen",
    "build": "dx build --platform web",
    "test-e2e": "npm run generate && rm -rf ../../target/dx/tasklens-ui/release/web/public && dx build --package tasklens-ui --platform web --release && playwright test"
  }
}
