{
  "feature": "Scenario 7.2: Lead Time Ramp",
  "description": "Validates the progressive priority boost (ramp) for tasks as they approach their due date, ensuring correct scoring at various checkpoints (2x, 1.5x, 1x LeadTime).\n",
  "background": {
    "current_time": "2025-01-01T00:00:00Z",
    "tasks": [
      {
        "id": "Task",
        "desired_credits": 0,
        "importance": 1,
        "lead_time_seconds": 604800,
        "due_date": "2025-01-21T00:00:00Z"
      }
    ]
  },
  "scenarios": [
    {
      "name": "Legacy Scenario",
      "steps": [
        {
          "description": "Step 1: 20 Days Remaining (Too Early)",
          "then": {
            "expected_order": [],
            "expected_props": [
              {
                "id": "Task",
                "is_visible": true,
                "score": 0,
                "is_ready": false
              }
            ]
          }
        },
        {
          "when": [
            {
              "increment_current_time": 518400
            }
          ],
          "description": "Step 2: 14 Days Remaining (Just Appearing)",
          "then": {
            "expected_order": [],
            "expected_props": [
              {
                "id": "Task",
                "is_visible": true,
                "score": 0,
                "is_ready": false
              }
            ]
          }
        },
        {
          "when": [
            {
              "increment_current_time": 302400
            }
          ],
          "description": "Step 3: 10.5 Days Remaining (Halfway)",
          "then": {
            "expected_order": [
              "Task"
            ],
            "expected_props": [
              {
                "id": "Task",
                "score": 0.5
              }
            ]
          }
        },
        {
          "when": [
            {
              "increment_current_time": 302400
            }
          ],
          "description": "Step 4: 7 Days Remaining (Max)",
          "then": {
            "expected_order": [
              "Task"
            ],
            "expected_props": [
              {
                "id": "Task",
                "score": 1
              }
            ]
          }
        },
        {
          "when": [
            {
              "increment_current_time": 604800
            }
          ],
          "description": "Step 5: 0 Days Remaining (Overdue)",
          "then": {
            "expected_order": [
              "Task"
            ],
            "expected_props": [
              {
                "id": "Task",
                "score": 1
              }
            ]
          }
        }
      ]
    }
  ]
}
