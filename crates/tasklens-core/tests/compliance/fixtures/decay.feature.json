{
  "feature": "Scenario 7.3: Decay Mechanics",
  "description": "Validates the exponential decay of task credits over time (half-life rule) and ensures scores decrease accordingly without manual intervention.\n",
  "background": {
    "current_time": "2025-01-01T00:00:00Z",
    "tasks": [
      {
        "id": "FadingTask",
        "credits": 100
      }
    ]
  },
  "scenarios": [
    {
      "name": "Legacy Scenario",
      "steps": [
        {
          "description": "Step 1: 0 Days",
          "then": {
            "expected_order": [
              "FadingTask"
            ],
            "expected_props": [
              {
                "id": "FadingTask",
                "effective_credits": 100
              }
            ]
          }
        },
        {
          "when": [
            {
              "increment_current_time": 604800
            }
          ],
          "description": "Step 2: 7 Days",
          "then": {
            "expected_order": [
              "FadingTask"
            ],
            "expected_props": [
              {
                "id": "FadingTask",
                "effective_credits": 50
              }
            ]
          }
        },
        {
          "when": [
            {
              "increment_current_time": 604800
            }
          ],
          "description": "Step 3: 14 Days",
          "then": {
            "expected_order": [
              "FadingTask"
            ],
            "expected_props": [
              {
                "id": "FadingTask",
                "effective_credits": 25
              }
            ]
          }
        }
      ]
    }
  ]
}
