{
  "feature": "Scenario: Complex Mutation Cycle",
  "description": "Tests a multi-step lifecycle combining time decay and credit updates to verify that task state transitions correctly impact scoring and ordering dynamics over time.\n",
  "background": {
    "current_time": "2025-01-01T00:00:00Z",
    "tasks": [
      {
        "id": "Project",
        "importance": 1,
        "desired_credits": 100,
        "credits": 100,
        "children": [
          {
            "id": "Task",
            "importance": 1,
            "status": "Pending",
            "credits_increment": 10
          }
        ]
      }
    ]
  },
  "scenarios": [
    {
      "name": "Legacy Scenario",
      "steps": [
        {
          "legacy_description": "Step 1: Initial Balanced State",
          "then": {
            "expected_order": [
              "Task"
            ],
            "expected_props": [
              {
                "id": "Project",
                "score": 0
              }
            ]
          }
        },
        {
          "when": {
            "advance_time_seconds": 604800
          },
          "legacy_description": "Step 2: Advance Time (Decay)",
          "then": {
            "expected_order": [
              "Task"
            ],
            "expected_props": [
              {
                "id": "Project",
                "effective_credits": 50,
                "score": 0
              }
            ]
          }
        },
        {
          "when": {
            "update_credits": {
              "Project": 150
            }
          },
          "legacy_description": "Step 3: Add Credits (Simulate Work)",
          "then": {
            "expected_order": [
              "Task"
            ],
            "expected_props": [
              {
                "id": "Project",
                "effective_credits": 150,
                "score": 0
              }
            ]
          }
        }
      ]
    }
  ]
}
