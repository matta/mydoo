{
  "$schema": "https://unpkg.com/knip@5/schema.json",
  "ignore": ["pnpm-workspace.yaml"],
  "rules": {
    "exports": "warn",
    "types": "warn",
    "nsExports": "off",
    "classMembers": "off",
    "duplicates": "off",
    "enumMembers": "off",
    "files": "error"
  },
  "workspaces": {
    ".": {
      "entry": ["scripts/*.*"]
    },
    "packages/tasklens": {
      "project": ["src/**/*.ts!"]
    },
    "apps/client": {
      "ignoreDependencies": ["@vitest/browser"]
    }
  }
}
