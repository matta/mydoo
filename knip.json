{
  "$schema": "https://unpkg.com/knip@5/schema.json",
  "ignore": ["pnpm-workspace.yaml"],
  "ignoreBinaries": ["test:e2e:desktop", "test:e2e:mobile"],
  "rules": {
    "exports": "warn",
    "types": "warn",
    "nsExports": "warn",
    "classMembers": "warn",
    "duplicates": "warn",
    "enumMembers": "warn",
    "files": "error",
    "dependencies": "warn",
    "devDependencies": "warn"
  },
  "workspaces": {
    ".": {
      "entry": ["scripts/*.*"]
    },
    "packages/tasklens": {
      "project": ["src/**/*.ts!"]
    },
    "apps/client": {
      "entry": [
        "src/main.tsx",
        "tests/e2e/steps/**/*.steps.ts",
        "tests/e2e/fixtures.ts"
      ],
      "ignoreDependencies": ["@vitest/browser"]
    }
  }
}
