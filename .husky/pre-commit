#!/bin/sh

if git rev-parse --verify HEAD >/dev/null 2>&1
then
        against=HEAD
else
        # Initial commit: diff against an empty tree object
        against=$(git hash-object -t tree /dev/null)
fi

# If you want to allow non-ASCII filenames set this variable to true.
allownonascii=$(git config --type=bool hooks.allownonascii 2>/dev/null || echo "false")

# Redirect output to stderr.
exec 1>&2

# Cross platform projects tend to avoid non-ASCII filenames; prevent
# them from being added to the repository. We exploit the fact that the
# printable range starts at the space character and ends with tilde.
if [ "$allownonascii" != "true" ] &&
        # Note that the use of brackets around a tr range is ok here, (it's
        # even required, for portability to Solaris 10's /usr/bin/tr), since
        # the square bracket bytes happen to fall in the designated range.
        test $(git diff-index --cached --name-only --diff-filter=A -z $against |
          LC_ALL=C tr -d '[ -~]\0' | wc -c) != 0
then
        cat <<\EOF
Error: Attempt to add a non-ASCII file name.

This can cause problems if you want to work with people on other platforms.

To be portable it is advisable to rename the file.

If you know what you are doing you can disable this check using:

  git config hooks.allownonascii true
EOF
        exit 1
fi

# If there are whitespace errors, print the offending file names and fail.
git diff-index --check --cached $against -- || exit 1

# --- Branch Protection ---

current_branch=$(git rev-parse --abbrev-ref HEAD)
if [ "$current_branch" = "main" ]; then
  echo "❌ Error: Committing directly to the 'main' branch is prohibited. Please use a feature branch."
  exit 1
fi

# --- Project Specific Checks ---

if ./scripts/is-agent.sh; then
  if [ "$AGENT_GIT_COMMIT_SECRET" != "I follow directions." ]; then
    echo "❌ Error: AGENT_GIT_COMMIT_SECRET must be set to the correct value for agent commits; begin by reading AGENTS.md for details."
    exit 1
  fi
fi

if git diff --name-only --cached | grep -q "^ROLLING_CONTEXT.md$"; then
  echo "❌ Error: ROLLING_CONTEXT.md is staged for commit. This file must not be committed. Please unstage it: git restore --staged ROLLING_CONTEXT.md"
  exit 1
fi

# --- Rust Format Check ---
# Only run if there are Rust files in the workspace
if [ -f "Cargo.toml" ]; then
  echo "Checking Rust formatting..."
  if ! cargo fmt --check; then
    echo "❌ Error: Rust code is not formatted. Run 'cargo fmt' to fix."
    exit 1
  fi
fi

if git diff --name-only --cached | grep -q "^tempcontext/"; then
  echo "❌ Error: Files in 'tempcontext/' are staged for commit. This directory must not be committed. Please unstage them: git restore --staged tempcontext/"
  exit 1
fi

pnpm exec turbo run check-human
