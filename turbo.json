{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": [
    "package.json",
    "pnpm-workspace.yaml",
    "tsconfig.base.json",
    "biome.json"
  ],
  "globalPassThroughEnv": ["ANTIGRAVITY_AGENT", "GEMINI_CLI", "CI"],
  "tasks": {
    "//#check:staged": {
      "cache": false
    },
    "//#lint:staged": {
      "cache": false
    },
    "//#lint:deps": {
      "inputs": [
        "package.json",
        "**/package.json",
        "pnpm-lock.yaml",
        "knip.json",
        "**/*.ts",
        "**/*.tsx",
        "**/*.js",
        "**/*.mjs",
        "**/*.cjs"
      ],
      "outputs": [],
      "cache": true
    },
    "//#lint:filenames": {
      "inputs": [
        "**/*.md",
        "**/*.sh",
        "**/*.yaml",
        "**/*.yml",
        "**/*.toml",
        "**/*.config.js",
        "**/*.config.ts",
        "!**/playwright-report/**",
        "!**/test-results/**"
      ],
      "outputs": []
    },
    "lint": {
      "dependsOn": ["//#lint:filenames"],
      "outputs": []
    },
    "typecheck": {
      "dependsOn": ["^build"],
      "inputs": [
        "src/**/*.ts",
        "src/**/*.tsx",
        "tests/**/*.ts",
        "tests/**/*.tsx",
        "specs/**/*.ts",
        "*.config.ts",
        "tsconfig.json"
      ],
      "outputs": []
    },
    "build": {
      "dependsOn": ["lint", "^build"],
      "inputs": [
        "src/**/*",
        "public/**/*",
        "package.json",
        "tsconfig.json",
        "vite.config.ts",
        "index.html",
        "specs/**/*.d.ts"
      ],
      "outputs": ["dist/**", ".next/**", "!.next/cache/**"]
    },
    "test": {
      "dependsOn": ["lint", "build", "typecheck"],
      "inputs": ["src/**/*", "tests/**/*", "test/**/*", "specs/**/*"],
      "outputs": []
    },
    "test:e2e": {
      "dependsOn": ["lint", "build", "typecheck"],
      "outputs": ["playwright-report/**", "test-results/**"],
      "cache": true
    },
    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}
