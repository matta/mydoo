{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": [
    "package.json",
    "pnpm-workspace.yaml",
    "tsconfig.base.json",
    "biome.json",
    "eslint.config.js"
  ],
  "globalPassThroughEnv": ["ANTIGRAVITY_AGENT", "GEMINI_CLI", "CI"],
  "tasks": {
    "//#lint-staged": {
      "cache": false
    },
    "//#check-format-root": {
      "inputs": ["*"],
      "outputs": [],
      "cache": true
    },
    "//#fix-format-root": {
      "cache": false
    },
    "//#check-biome-root": {
      "cache": true,
      "inputs": ["*"],
      "outputs": []
    },
    "//#fix-biome-root": {
      "cache": false
    },
    "check-agent": {
      "dependsOn": [
        "//#lint-staged",
        "//#check-deps-root",
        "test",
        "test-e2e",
        "check-types"
      ],
      "cache": false
    },
    "check-human": {
      "dependsOn": ["//#lint-staged", "//#check-deps-root", "check-types"],
      "cache": false
    },
    "//#check-deps-root": {
      "inputs": [
        "package.json",
        "**/package.json",
        "pnpm-lock.yaml",
        "knip.json",
        "**/*.ts",
        "**/*.tsx",
        "**/*.js",
        "**/*.mjs",
        "**/*.cjs"
      ],
      "outputs": [],
      "cache": true
    },
    "//#check-filenames-root": {
      "inputs": [
        "**/*.md",
        "**/*.sh",
        "**/*.yaml",
        "**/*.yml",
        "**/*.toml",
        "**/*.config.js",
        "**/*.config.ts",
        "!**/test-results/**",
        "!**/playwright-report/**",
        "!**/coverage/**",
        "!**/dist/**",
        "!**/.turbo/**",
        "!**/node_modules/**"
      ],
      "outputs": []
    },
    "check-biome": {
      "inputs": [
        "biome.json",
        "src/**/*",
        "tests/**/*",
        "specs/**/*",
        "**/*.json",
        "!**/test-results/**",
        "!**/playwright-report/**",
        "!**/coverage/**",
        "!**/dist/**",
        "!**/.turbo/**",
        "!**/node_modules/**"
      ],
      "outputs": []
    },
    "check-eslint": {
      "inputs": [
        "src/**/*",
        "tests/**/*",
        "specs/**/*",
        "*.config.js",
        "*.config.ts",
        "eslint.config.js"
      ],
      "outputs": []
    },
    "check-format": {
      "inputs": [
        "**/*.md",
        "**/*.json",
        "**/*.yaml",
        "**/*.yml",
        "src/**/*",
        "tests/**/*",
        "specs/**/*"
      ],
      "outputs": []
    },
    "check-style": {
      "dependsOn": [
        "check-biome",
        "check-eslint",
        "check-format",
        "//#check-biome-root",
        "//#check-filenames-root",
        "//#check-format-root"
      ],
      "outputs": []
    },
    "generate": {},
    "check-types": {
      "dependsOn": ["^build", "generate"],
      "inputs": [
        "src/**/*.ts",
        "src/**/*.tsx",
        "tests/**/*.ts",
        "tests/**/*.tsx",
        "specs/**/*.ts",
        "*.config.ts",
        "tsconfig.json"
      ],
      "outputs": []
    },
    "check": {
      "dependsOn": ["check-style", "check-types", "//#check-deps-root"],
      "outputs": []
    },
    "fix-biome": {
      "cache": false
    },
    "fix-eslint": {
      "cache": false
    },
    "fix-format": {
      "cache": false
    },
    "fix-style": {
      "dependsOn": [
        "fix-biome",
        "fix-eslint",
        "fix-format",
        "//#fix-biome-root",
        "//#fix-format-root"
      ],
      "cache": false
    },
    "fix": {
      "dependsOn": ["fix-style"],
      "cache": false
    },
    "build": {
      "dependsOn": ["check-style", "^build"],
      "inputs": [
        "src/**/*",
        "public/**/*",
        "package.json",
        "tsconfig.json",
        "vite.config.ts",
        "index.html",
        "specs/**/*.d.ts"
      ],
      "outputs": ["dist/**", ".next/**", "!.next/cache/**"]
    },
    "test": {
      "dependsOn": ["check-style", "build", "check-types", "generate"],
      "inputs": ["src/**/*", "tests/**/*", "test/**/*", "specs/**/*"],
      "outputs": []
    },
    "test-e2e": {
      "dependsOn": ["check-style", "build", "check-types", "generate"],
      "outputs": ["playwright-report/**", "test-results/**"],
      "cache": true
    },
    "test-e2e-desktop": {
      "dependsOn": ["check-style", "build", "check-types", "generate"],
      "outputs": ["playwright-report/**", "test-results/**"],
      "cache": true
    },
    "test-e2e-mobile": {
      "dependsOn": ["check-style", "build", "check-types", "generate"],
      "outputs": ["playwright-report/**", "test-results/**"],
      "cache": true
    },
    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}
